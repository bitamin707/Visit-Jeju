<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans:bean id="loginSuccess" class="com.human.Handller.LoginRedirectHandler"/>

<!-- URL 설정 -->
	
	<http use-expressions="true">
		<headers>
	        <frame-options
	        policy="SAMEORIGIN" />
	    </headers>
	    
		<intercept-url pattern="/shopping/product/**" access="permitAll" />
		<intercept-url pattern="/resources/**" access="permitAll" />  
		<intercept-url pattern="/main/main" access="hasRole('ADMIN')" />
		<form-login login-page="/main/loginPage"
					authentication-success-handler-ref="loginSuccess"
					default-target-url="/main/main" 
		            authentication-failure-url="/main/loginPage?error" 
		            username-parameter="username" 
		            password-parameter="password" />
		<logout logout-url="/main/logout" invalidate-session="true"   />
		<!--해댕주소로오면 session이 지워지고 로그아웃이 진행됨   -->
		<access-denied-handler error-page="/main/login/error" />
		<headers>
        	<frame-options policy="SAMEORIGIN"/>
    	</headers> 
	</http>

	<!-- provider -->
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource2" 
			users-by-username-query="select username, password, enabled from users where username = ?"
			authorities-by-username-query="select username, authority from authorities where username = ?"/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>














